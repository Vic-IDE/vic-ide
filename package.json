{
  "name": "vic-ide",
  "displayName": "Vic IDE",
  "description": "Development tools for the Visual Computer (Vic)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:vic-ide.helloWorld",
    "onWebviewPanel:vic-ide",
    "onLanguage:vic"
  ],
  "main": "./build-ext/src-ext/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vic-ide.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vic-ide.openSimulator",
        "title": "Open Vic Simulator",
        "category": "Vic"
      }
    ],
    "languages": [
      {
        "id": "vic",
        "aliases": [
          "Vic assembly",
          "vic"
        ],
        "extensions": [
          ".asm",
          ".vic"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vic",
        "scopeName": "source.vic",
        "path": "./syntaxes/vic.tmLanguage.json"
      }
    ]
  },
  "homepage": ".",
  "scripts": {
    "vscode:prepublish": "npm run build && npm run compile-ext",
    "compile-ext": "tsc -p ./src-ext/tsconfig.json",
    "watch-ext": "tsc -watch -p ./src-ext/tsconfig.json",
    "lint": "eslint --max-warnings=0 src && eslint --max-warnings=0 src-ext",
    "format-fix": "prettier --write ./src ./src-ext ./public",
    "format": "prettier --check ./src ./src-ext ./public",
    "test-ext": "npm run compile-ext && node ./build-ext/src-ext/test/runTest.js",
    "start": "TSC_COMPILE_ON_ERROR=true DISABLE_ESLINT_PLUGIN=true react-scripts start",
    "build": "react-scripts build",
    "test": "CI=true react-scripts test --coverage",
    "start-test": "react-scripts test",
    "ci": "npm run build && npm run format && npm run lint && npm run test && npm run test-ext",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.5.2",
    "@types/node": "16.18.11",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@types/vscode-webview": "1.57.1",
    "assert-never": "1.2.1",
    "classnames": "2.3.2",
    "modern-css-reset": "1.4.0",
    "prettier": "2.8.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "4.8.0",
    "react-scripts": "5.0.1",
    "tabbable": "6.1.1",
    "typescript": "4.9.5",
    "web-vitals": "2.1.4"
  },
  "devDependencies": {
    "@types/glob": "8.0.0",
    "@types/mocha": "10.0.1",
    "@types/vscode": "1.76.0",
    "@typescript-eslint/eslint-plugin": "5.51.0",
    "@typescript-eslint/parser": "5.51.0",
    "@vscode/test-electron": "2.2.0",
    "@vscode/vsce": "2.19.0",
    "eslint": "8.33.0",
    "glob": "8.0.3",
    "mocha": "10.1.0",
    "serve": "14.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
