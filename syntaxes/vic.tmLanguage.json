{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Vic assembly",
	"patterns": [
		{
			"match": "(\\w+):",
			"captures": {
				"1": { "name": "variable" }
			}
		},
		{
			"match": "(?i)(goto(z|p?)) (\\w+)",
			"captures": {
				"1": { "name": "keyword.control.vic" },
				"3": { "name": "variable" }
			}
		},
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"comments" : {
            "patterns": [
                {
                   "begin": "//",
                   "end": "$",
                   "name": "comment.line.double-slash.astra"
                },
                {
                    "begin": "/\\*",
                    "end" : "\\*/",
                    "name": "comment.block.astra"
                }
             ]
        },
		"keywords": {
			"patterns": [{
				"name": "keyword.control.vic",
				"match": "(?i)\\b(add|sub|load|store|goto|gotoz|gotop|read|write|stop)\\b"
			}]
		}
	},
	"scopeName": "source.vic"
}
